<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the background color -->
    <solid android:color="#7EFFFFFF" /> <!-- Change to your desired color -->

    <!-- Set the corner radius for rounded edges -->
    <corners android:radius="15dp" />

    <!-- Set stroke color and width -->
    <stroke
        android:width="1dp"
        android:color="@color/Gold" /> <!-- Change to your desired border color -->

    <!-- Optional: Add padding inside the EditText -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>